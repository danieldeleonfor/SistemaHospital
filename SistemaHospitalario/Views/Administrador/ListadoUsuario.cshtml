@model List<SistemaHospitalario.Models.Usuario>

<div class="card">
    <div class="card-header">
        <h5>Listado de Usuarios</h5>
        <div class="card-header-right">
            <ul class="list-unstyled card-option">
                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                <li><i class="fa fa-window-maximize full-card"></i></li>
                <li><i class="fa fa-minus minimize-card"></i></li>
                <li><i class="fa fa-refresh reload-card"></i></li>
                <li><i class="fa fa-trash close-card"></i></li>
            </ul>
        </div>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nombre Usuario</th>
                        <th>Nombres</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Rol</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (SistemaHospitalario.Models.Usuario usuarios in ViewBag.Usuarios)
                    {
                        <tr>
                            <th scope="row">@usuarios.NombreUsuario</th>
                            <td>@usuarios.Nombres</td>
                            <td>@usuarios.FechaNacimiento</td>
                            <td>@usuarios.Rol</td>
                            <td>
                                <a asp-controller="Administrador"
                                   asp-action="CrearUsuario"
                                   asp-route-id="@usuarios.UsuarioId">Modificar</a>
                                <a asp-controller="Administrador"
                                   asp-action="DeleteUser"
                                   asp-route-id="@usuarios.UsuarioId">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>